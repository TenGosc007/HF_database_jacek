<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add A User</h1>
      <p>You may add new user here</p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/users/add" method="POST">
        <div class="input-group">
          <label for="first_name">User first name</label>
          <input type="text" name="first_name" id="first_name" class="input-box" placeholder="eg. Jan"
            maxlength="100" value={{first_name}}>
        </div>
        <div class="input-group">
          <label for="last_name">User last name</label>
          <input type="text" name="last_name" id="last_name" class="input-box" placeholder="eg. Kowalski"
            maxlength="100" value={{last_name}}>
        </div>
        <div class="input-group">
          <label for="position">position Needed</label>
          <input type="text" name="position" id="position" class="input-box" placeholder="eg. customer, partner, supervisor"
          maxlength="100" value={{position}}>
        </div>
        <input type="submit" value="Add User" class="btn btn-reverse">
      </form>
    </div>
  </section>